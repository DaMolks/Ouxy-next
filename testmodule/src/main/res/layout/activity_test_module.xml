<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Module"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tests de Communication"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/testEventButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tester Event Bus" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/testDataButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tester Persistence" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tests SystÃ¨me"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/testCrashButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tester Gestion Erreurs" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/testPermissionsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tester Permissions" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>